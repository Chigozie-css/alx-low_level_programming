# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule for compiling and linking the program
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

# Rule for compiling source files
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Rule for cleaning Emacs and Vim temporary files
clean:
	@$(RM) *~ $(NAME)

# Rule for cleaning object files
oclean:
	@$(RM) $(OBJ)

# Rule for cleaning all files
fclean: clean oclean
	@$(RM) $(NAME)

# Rule for rebuilding the project
re: fclean all

# Phony targets
.PHONY: all clean oclean fclean re

